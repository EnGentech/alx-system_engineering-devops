#!/bin/bash

# Install Nginx web server if not already installed
if ! command -v nginx &> /dev/null; then
    apt update
    apt install -y nginx
fi

# Create a configuration file for the redirection
cat > /etc/nginx/conf.d/redirect.conf <<EOF
server {
    listen 80;
    server_name your_domain.com;

    location /redirect_me {
        return 301 https://www.example.com/new_page;
    }

    location / {
        # Your existing Nginx configuration goes here
        # ...
    }
}
EOF

# Test the Nginx configuration
nginx -t

# Restart Nginx to apply the changes
sudo service nginx restart
