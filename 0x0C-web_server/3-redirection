#!/usr/bin/env bash

# Install Nginx
sudo apt update
sudo apt install -y nginx

# Configure the redirection in Nginx default configuration
sed -i '/server_name _;/a \ \n\tlocation \/redirect_me {\n\t\treturn 301 http:\/\/newpage.com;\n\t}\n' /etc/nginx/sites-available/default

# Restart Nginx to apply the changes
sudo service nginx restart
